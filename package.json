    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cypress": "^13.8.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "mockado": "^2.0.3",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5"
  }
}
